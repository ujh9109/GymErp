<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ModalMapper">

    <!-- ================================
         서비스 상품 선택 모달
    ================================= -->

    <!-- 서비스 상품 목록 조회 -->
    <select id="getServiceModalList" resultType="ServiceDto">
        SELECT *
        FROM (
            SELECT
                ROWNUM AS rn,
                s.serviceId,
                s.codeBId,
                s.name,
                s.price,
                s.isActive,
                s.serviceValue,
                s.createdAt,
                s.updatedAt
            FROM service s
            WHERE s.isActive = 1
            <if test="keyword != null and keyword != ''">
                AND s.name LIKE '%' || #{keyword} || '%'
            </if>
            ORDER BY
                CASE WHEN s.codeBId LIKE '%PT%' THEN 0 ELSE 1 END,
                s.name DESC
        )
        WHERE rn BETWEEN #{startRowNum} AND #{endRowNum}
    </select>

    <!-- 서비스 상품 전체 개수 조회 -->
    <select id="getServiceModalCount" resultType="int">
        SELECT COUNT(*)
        FROM service s
        WHERE s.isActive = 1
        <if test="keyword != null and keyword != ''">
            AND s.name LIKE '%' || #{keyword} || '%'
        </if>
    </select>

    <!-- ================================
         서비스 상품 선택 모달 끝
    ================================= -->
    
    
    
     <!-- ================================
         실물 상품 선택 모달
    ================================= -->

    <select id="getProductModalList"
            resultType="com.example.gymerp.dto.ProductDto">
        SELECT
            productId,
            codeBId,
            name,
            price,
            isActive
        FROM product
        WHERE isActive = 1
        <if test="keyword != null and keyword != ''">
            AND name LIKE '%' || #{keyword} || '%'
        </if>
        ORDER BY name DESC
        OFFSET #{offset} ROWS FETCH NEXT #{limit} ROWS ONLY
    </select>

    <select id="getProductModalCount" resultType="int">
        SELECT COUNT(*)
        FROM product
        WHERE isActive = 1
        <if test="keyword != null and keyword != ''">
            AND name LIKE '%' || #{keyword} || '%'
        </if>
    </select>
    
    <!-- ================================
         실물 상품 선택 모달 끝
    ================================= -->    

    <!-- ================================
         직원 선택 모달
    ================================= -->

    <sql id="employeeWhere">
        <where>
            emp_status = 'ACTIVE'
            <if test="keyword != null and keyword != ''">
                AND (emp_name LIKE '%' || #{keyword} || '%'
                OR emp_email LIKE '%' || #{keyword} || '%')
            </if>
        </where>
    </sql>

    <select id="getEmployeeModalList"
            parameterType="map"
            resultType="com.example.gymerp.dto.EmpDto">
        SELECT
            emp_num AS empNum,
            emp_name AS empName,
            emp_email AS empEmail,
            emp_job AS empJob
        FROM employee
        <include refid="employeeWhere"/>
        ORDER BY emp_name ASC
        OFFSET #{offset} ROWS FETCH NEXT #{limit} ROWS ONLY
    </select>

    <select id="getEmployeeModalCount"
            parameterType="map"
            resultType="int">
        SELECT COUNT(*)
        FROM employee
        <include refid="employeeWhere"/>
    </select>
    
    <!-- ================================
         직원 선택 모달 끝
    ================================= -->
    
    <!-- ================================
         회원 선택 모달
    ================================= -->
    
    
    <!-- ================================
         회원 선택 모달 끝
    ================================= -->    

</mapper>
